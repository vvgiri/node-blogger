<!doctype html>
<html>
<head>
    <title>Blogger</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/post" class="btn btn-default btn-sm">Create New Post</a>
    </div>

    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row">

        <div class="well">
            <h3><span class="fa fa-laptop"></span> Local</h3>

            <p>
                <strong>id</strong>:<%= user._id %><br>
                <strong>email</strong>:<%= user.email %><br>
                <strong>password</strong>: <%= user.password %><br>
                <strong>Blog Title</strong>:<%= user.blogTitle %><br>
                <strong>Blog Description</strong>:<%= user.blogDescription %>
            </p>
                
        </div>

    </div>
    <div class="container">
        <h3>Blog posts</h3>    
        <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created Date</th>
                <th>Updated Date</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < posts.length; i++) { %>
            <tr>
                <td><%= posts[i].title %></td>
                <td><%= posts[i].createdDate %></td>
                <td><%= posts[i].updatedDate %></td>
                <td><a href="/post/view/<%=posts[i].id%>" class="btn btn-default btn-sm">View </a> </td>
                <td><a href="/post/<%=posts[i].id%>" class="btn btn-default btn-sm">Edit </a> </td>
                <td><a href="/post/delete/<%=posts[i].id%>" class="btn btn-default btn-sm">Delete </a> </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>   
</div>
</body>
</html>